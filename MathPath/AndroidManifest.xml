<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.educationalapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.example.educationalapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.educationalapp.Topics"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.educationalapp.Quiz"
            android:label="@string/quiz_page_title"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.educationalapp.Videos"
            android:label="@string/title_activity_videos"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.educationalapp.LimitsTabs"
            android:label="Limits"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
