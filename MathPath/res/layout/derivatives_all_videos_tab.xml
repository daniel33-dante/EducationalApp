<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
        
    <LinearLayout android:orientation="vertical"
    	android:layout_width="500dp"
     	android:layout_height="match_parent"
     	android:layout_gravity="center_horizontal" >
     	
        <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:text="INTRO TO DERIVATIVES"
        android:layout_gravity="center_horizontal" /> 
        
        <Button android:id="@+id/derivatives_all_first_vid_button"
	        android:text="Derivatives 1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	      	android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/button" />
        
        <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:text="LIMIT DEFINITIONS"
        android:layout_gravity="center_horizontal" /> 
	    
    	<Button android:id="@+id/derivatives_all_second_vid_button"
	        android:text="Understanding the Definition of the Derivative"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/button" />
	        
    	<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:text="RULES"
        android:layout_gravity="center_horizontal" /> 
    	
       	<Button android:id="@+id/derivatives_all_third_vid_button"
	        android:text="Solving Derivatives"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/button" />
    
    	<Button android:id="@+id/derivatives_all_fourth_vid_button"
	        android:text="The Chain Rule"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/button" />
    	
    	<Button android:id="@+id/derivatives_all_fifth_vid_button"
	        android:text="Product Rule"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/button" />
    	
    	<Button android:id="@+id/derivatives_all_sixth_vid_button"
	        android:text="Quotient Rule"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/button" />
    	
    	<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:text="IMPLICIT DIFFERENTIATION"
        android:layout_gravity="center_horizontal" /> 
    	
    	<Button android:id="@+id/derivatives_all_seventh_vid_button"
	        android:text="Implicit Differentiation"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="90dp"
		    android:layout_marginRight="90dp"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/button" />
	    
    	<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        android:textSize="25sp"
        android:text="OPTIMIZATION"
        android:layout_gravity="center_horizontal" /> 
    	
    	<Button android:id="@+id/derivatives_all_eighth_vid_button"
	        android:text="Optimization"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
