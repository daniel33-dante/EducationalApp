<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background" >

    <TextView 
        android:id="@+id/welcome_line1"
        android:text="@string/welcome_message_line1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/MathPathBlue" />
    
    <TextView 
        android:id="@+id/welcome_line2"
        android:text="@string/welcome_message_line2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/MathPathBlue" />

    <ScrollView 
        android:id="@+id/subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout android:id="@+id/subject_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
	        <LinearLayout
		        android:id="@+id/buttons1"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="40dp"
		        android:layout_gravity="center_horizontal" >
		        
		        <Button
			        android:id="@+id/calc1_button"
			        android:text="@string/calculus1"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="150dp"
			        android:paddingRight="150dp"
			        android:paddingTop="60dp"
			        android:paddingBottom="60dp"
			        android:textSize="40sp"
			        android:textColor="@color/white"
			        android:background="@drawable/rounded_corner_button" />
		    
		    	<Button 
			        android:id="@+id/info1_button"
			        android:text="@string/info"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="50dp"
			        android:textColor="@color/white"
			        android:background="@drawable/round_button" />
		        
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/buttons2"
		        android:orientation="horizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="40dp"
		        android:layout_gravity="center_horizontal" >
		        
		        <Button
			        android:id="@+id/calc2_button"
			        android:text="@string/calculus2"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="150dp"
			        android:paddingRight="150dp"
			        android:paddingTop="60dp"
			        android:paddingBottom="60dp"
			        android:textSize="40sp"
			        android:textColor="@color/white"
			        android:background="@drawable/rounded_corner_button" />
		    
		    	<Button 
			        android:id="@+id/info2_button"
			        android:text="@string/info"
			        style="?android:attr/buttonStyleSmall"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="50dp"
			        android:textColor="@color/white"
			     	android:background="@drawable/round_button" />
		        
		    </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>
   
</LinearLayout>
